headers = gmodule.h
package = org.gtkkn.native.gmodule
headerFilter = gmodule.h

# pkg-config --cflags gmodule-2.0 | tr ' ' '\n' | sed '$!s/$/ \\/'
compilerOpts.linux =\
    -I/usr/include/glib-2.0 \
    -I/usr/lib/glib-2.0/include \
    -I/usr/include/sysprof-6 \
    -pthread

compilerOpts.linux_x64 = \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include \
    -I/usr/lib64/glib-2.0/include \

# pkg-config --libs gmodule-2.0 | tr ' ' '\n' | sed '$!s/$/ \\/'
# can't add `-lgmodule-2.0` due to libgmodule-2.0.so: error: undefined reference to 'dlopen'
linkerOpts.linux = \
    -pthread \
    -lglib-2.0

strictEnums = \
    GModuleError
