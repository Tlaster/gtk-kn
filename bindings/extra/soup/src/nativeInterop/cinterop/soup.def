headers = libsoup/soup.h
package = org.gtkkn.native.soup
headerFilter = libsoup/*.h

# pkg-config --cflags libsoup-3.0
compilerOpts.linux = \
    -I/usr/include \
    -I/usr/include/libsoup-3.0 \
    -I/usr/include/glib-2.0 \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include \
    -I/usr/include/libmount \
    -I/usr/include/blkid \
    -I/usr/include/sysprof-4 \
    -pthread


compilerOpts.linux_x64 = \
    -I/usr/lib64/glib-2.0/include \
    -I/usr/include/x86_64-linux-gnu \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include

# pkg-config --libs libsoup-3.0
linkerOpts.linux = \
    -L/usr/local/lib \
    -lsoup-3.0 \
    -lglib-2.0 \
    -lgio-2.0 \
    -lgobject-2.0 \
    -lglib-2.0 \
    -pthread \
    -ldl

linkerOpts.linux_x64 = \
    -L/usr/lib/x86_64-linux-gnu \
    -L/usr/lib64

strictEnums = \
    SoupCacheType \
    SoupCookieJarAcceptPolicy \
    SoupDateFormat \
    SoupEncoding \
    SoupHTTPVersion \
    SoupLoggerLogLevel \
    SoupMemoryUse \
    SoupMessageHeadersType \
    SoupMessagePriority \
    SoupSameSitePolicy \
    SoupSessionError \
    SoupStatus \
    SoupTLDError \
    SoupURIComponent \
    SoupWebsocketCloseCode \
    SoupWebsocketConnectionType \
    SoupWebsocketDataType \
    SoupWebsocketError \
    SoupWebsocketState
