headers = atk/atk.h
package = org.gtkkn.native.atk
headerFilter = atk/*.h

# pkg-config --cflags atk
compilerOpts.linux = \
    -I/usr/include \
    -I/usr/include/atk-1.0 \
    -I/usr/include/glib-2.0

compilerOpts.linux_x64 = \
    -I/usr/lib64/glib-2.0/include \
    -I/usr/include/x86_64-linux-gnu \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include

# pkg-config --libs atk
linkerOpts.linux = \
    -L/usr/local/lib \
    -latk-1.0 \
    -lgobject-2.0 \
    -lglib-2.0 \
    -ldl

linkerOpts.linux_x64 = \
    -L/usr/lib/x86_64-linux-gnu \
    -L/usr/lib64

strictEnums = \
    AtkCoordType \
    AtkKeyEventType \
    AtkLayer \
    AtkLive \
    AtkRelationType \
    AtkRole \
    AtkScrollType \
    AtkStateType \
    AtkTextAttribute \
    AtkTextBoundary \
    AtkTextClipType \
    AtkTextGranularity \
    AtkValueType
