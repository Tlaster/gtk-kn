headers = jsc/jsc.h
package = org.gtkkn.native.javascriptcore
headerFilter = jsc/*.h webkitgtk-6.0/jsc/*.h

# pkg-config --cflags javascriptcoregtk-6.0
compilerOpts.linux = \
    -I/usr/include \
    -I/usr/include/webkitgtk-6.0 \
    -I/usr/include/glib-2.0


compilerOpts.linux_x64 = \
    -I/usr/lib64/glib-2.0/include \
    -I/usr/include/x86_64-linux-gnu \
    -I/usr/lib/x86_64-linux-gnu/glib-2.0/include

# pkg-config --libs javascriptcoregtk-6.0
linkerOpts.linux = \
    -L/usr/local/lib \
    -ljavascriptcoregtk-6.0 \
    -lglib-2.0 \
    -lgobject-2.0 \
    -pthread

linkerOpts.linux_x64 = \
    -L/usr/lib/x86_64-linux-gnu \
    -L/usr/lib64

strictEnums = \
    JSCCheckSyntaxMode \
    JSCCheckSyntaxResult \
    JSCOptionType \
    JSCTypedArrayType
